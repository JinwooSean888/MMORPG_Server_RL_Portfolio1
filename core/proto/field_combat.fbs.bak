namespace field_combat;

enum CombatEntityType : byte {
  Player  = 0,
  Monster = 1,
  Npc     = 2
}

table CombatEvent {
  attackerType: EntityType = Player;
  attackerId:   ulong;

  targetType:   EntityType = Player;
  targetId:     ulong;

  damage:       int;
  remainHp:     int;
}

root_type CombatEvent;
